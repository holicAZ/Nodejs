<!DOCTYPE html>
<html lang="ko">
<head>
    
    <link
    rel="stylesheet"
    href="public/css/allpost.css"/>
    <%- include ('../partials/head') %>
    
</head>

<body>
    <%- include ('../partials/nav') %>
    
    <main class="back_board"> 
        <header class="head_1">
            <div class="head_2">
                <h1>#게시물</h1>
            </div>
        </header>
        <div class="show-img">
            <img class="show-img" src="../<%=filePath%>"> <p></p>
         </div>
        <div class=body>
            <span><%=post.body%></span> <div><%=post.author.id%></div>
        </div>
        
    </main>
    <div class="comment-box">
    <h3 class="comment-header">Comments</h3>
    
        <% if(comments.length){ %> <!-- 1-1 -->
            <div class="mt-3 border-bottom">
              <% comments.forEach(function(comment) { %> <!-- 1-2 -->
                <div class="border-top pt-1 pb-1">
                  <div class="row">
                    <div class="col-3 col-md-2 col-lg-1 pl-4"><%= comment.author.id %></div> <!-- 1-3 -->
                    <div class="col-9 col-md-10 col-lg-11">
                      <div class="comment-show">
                        <div class="comment-text mb-3"><%= comment.text %></div> <!-- 1-4 -->
                        <small class="d-block">
                          (Created: <%= comment.createAt%> ) <!-- 1-5 -->
                        </small>
                      </div>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } %>
    <div class="mt-3"> <!-- 2 -->
        <form action="/comment?postId=<%= post._id %>" method="post">
          
            <div class="row">
              <div class="col-8">
                <textarea name="text" rows="2" class="form-control "></textarea>
              </div>
              <div class="col-4">
                <button type="submit" class="btn btn-primary h-100 mr-2">댓글 저장</button>
              </div>
            </div>
            
        </form>
      </div>
    </div>
    <%- include ('../partials/footer') %>
    <%- include ('../partials/js') %>
</body>
</html>